		}
	}

	bool validDrop(int x, int y, state* temp)
	{
		if (x < 3 && x >= 0 && y < 3 && y >= 0)
		{
			if (temp->board[y][x] == '.')
				return true;
			else
				return false;
		}
	}

	bool validMove(float x, float y, float x2, float y2, int playerTurn)
	{
		char player;
		if (playerTurn == 1)
			player = 'x';
		if (playerTurn == 2)
			player = 'o';
		if (x < 3 && x2 < 3 && y < 3 && y2 < 3 && x >= 0 && x2 >= 0 && y >= 0 && y2 >= 0)
