class state
{
public:
	state* path;
	int cost;
	int nbPieces;
	char board[3][3];


	state()
	{
		for (int i = 0; i < 3; i++)
		{
			for (int j = 0; j < 3; j++)
			{
				board[i][j] = '.';
			}

		}
		path = NULL;
		cost = 0;
		nbPieces = 0;

	}

	state(state* father, int cost, int x, int y, int playerturn, int nbPieces)
	{
		this->path = father;
