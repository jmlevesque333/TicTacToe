	state MinMax(state* root, int depth, int playerTurn, int nbPieces)
	{
		int bestScore = -100;
		
		state* path = NULL;
		if (depth == 3)
		{
			if (nbPieces < 7)
			{
				state* temp = new state();
				temp->cost = euristiqueDrop(root, playerTurn % 2 + 1);
				return *temp;
			}
			else
			{
				state* temp = new state();
				temp->cost = euristiqueMove(root, playerTurn % 2 + 1);
				return *temp;
			}
		}
		else
		{
			if (nbPieces < 6)
			{
				playerTurn++;
				vector <state*> dropList;
				generateDrop(dropList, root, playerTurn % 2 + 1, nbPieces);

				int i = dropList.size();
				for (int n = 0; n < i; n++)
				{
					state temp = MinMax(dropList[n], depth + 1, playerTurn, nbPieces + 1);
					temp.cost = temp.cost*-1;
					if (bestScore < temp.cost)
					{
						bestScore = temp.cost;
						path = dropList[n];
					}
				}
			}
			else
			{
				vector <state*> moveList;
				generateMove(moveList, playerTurn, nbPieces);
				int i = moveList.size();
				for (int n = 0; n < i; n++)
				{
					state temp = MinMax(moveList[n], depth++, playerTurn++ % 2 + 1, nbPieces++);
					temp.cost = temp.cost*-1;
					if (bestScore < temp.cost)
					{
						bestScore = temp.cost;
						path = moveList[n];
					}
				}
			}
		}
		return *path;
	}

